      "@kb-labs/progress-reporter": [
        "packages/progress-reporter/src/index.ts"
      ],
      "@kb-labs/progress-reporter/*": [
        "packages/progress-reporter/src/*"
      ],
      "@kb-labs/task-classifier": [
        "packages/task-classifier/src/index.ts"
      ],
