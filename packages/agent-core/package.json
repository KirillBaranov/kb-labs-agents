{
  "name": "@kb-labs/agent-core",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Core logic for KB Labs Agents. Provides AgentExecutor, ToolDiscoverer, ToolExecutor, and AgentRegistry.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./executor": {
      "import": "./dist/executor/index.js",
      "types": "./dist/executor/index.d.ts"
    },
    "./tools": {
      "import": "./dist/tools/index.js",
      "types": "./dist/tools/index.d.ts"
    },
    "./registry": {
      "import": "./dist/registry/index.js",
      "types": "./dist/registry/index.d.ts"
    },
    "./dist/*": "./dist/*"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "pretype-check": "pnpm --filter @kb-labs/agent-core build",
    "clean": "rimraf dist",
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@kb-labs/sdk": "link:../../../kb-labs-sdk/packages/sdk",
    "@kb-labs/agent-contracts": "workspace:*",
    "@kb-labs/agent-tools": "workspace:*",
    "zod": "^3.23.8",
    "yaml": "^2.8.0",
    "glob": "^11.0.0"
  },
  "devDependencies": {
    "@kb-labs/devkit": "link:../../../kb-labs-devkit",
    "@types/node": "^24.3.3",
    "eslint": "^9",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "tree-sitter": "^0.22.6",
    "tree-sitter-typescript": "^0.23.2",
    "tree-sitter-javascript": "^0.23.1",
    "tree-sitter-python": "^0.23.6",
    "tree-sitter-go": "^0.23.4",
    "tree-sitter-rust": "^0.23.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
